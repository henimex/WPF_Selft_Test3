<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid Background="#AAE5E5E5">
        <Border BorderBrush="Chocolate" BorderThickness="2" VerticalAlignment="Center" Padding="3 0 0 0">
            <StackPanel Orientation="Vertical" Margin="2">
                <TextBlock Name="TxtUCName" Text="Name Lastname" FontSize="20" FontWeight="Bold" />
                <TextBlock Name="TxtUCPhone" Text="Phone" FontSize="15" Foreground="DodgerBlue" />
                <TextBlock Name="TxtUCEmail" Text="Email" FontSize="12" FontStyle="Italic" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
